<div class="form-row">
  <div class="form-item">
    <label for="">Title</label>
    <input type="text" name="title" value="<%= typeof(title) !== "undefined" ? title : "" %>" />
  </div>

  <div class="form-item">
    <label for="">Author</label>
    <select name="author">
      <% authors.forEach(author => { %>
      <% if (author.id == book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } else { %>
      <option label="<%= author.name %>" value="<%= author.id %>"></option>
      <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label for="">Published Date</label>
    <input type="date" name="publishedAt"
      value="<%= typeof(publishedAt) !== "undefined" ? publishedAt.toISOString().split("T")[0] : "" %>" />
  </div>

  <div class="form-item">
    <label for="">No.of Pages</label>
    <input type="number" name="pages" min="1" value="<%= typeof(noOfPages) !== "undefined" ? noOfPages : "1" %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label for="">Cover</label>
    <input name="coverImage" type="file" class="filepond">
  </div>

  <div class="form-item">
    <label for="">Description</label>
    <textarea name="description"> <%= typeof(description) !== "undefined" ? description : "" %></textarea>
  </div>
</div>
