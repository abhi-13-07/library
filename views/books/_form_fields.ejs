<div>
  <label for="">Title</label>
  <input 
    type="text" 
    name="title" 
    value="<%= typeof(title) !== "undefined" ? title : "" %>"
  />
</div>

<div>
  <label for="">Author</label>
  <select name="author">
    <% authors.forEach(author => { %>
    <% if (author.id === book.author) { %>
    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } else { %>
    <option label="<%= author.name %>" value="<%= author.id %>"></option>
    <% } %>
    <% }) %>
  </select>
</div>

<div>
  <label for="">Published Date</label>
  <input 
    type="date" 
    name="date"
    value="<%= typeof(publishDate) !== "undefined" ? publishDate.toISOString().split("T") : "" %>"
  />
</div>
<div>
  <label for="">Description</label>
  <textarea 
    type="text" 
    name="description"
    rows="10"
    cols="50"
  > <%= typeof(description) !== "undefined" ? description : "" %></textarea>
</div>

<div>
  <label for="">No.of Pages</label>
  <input type="number" name="pages" min="1" value="<%= typeof(noOfPages) !== "undefined" ? noOfPages : "1" %>">
</div>

<div>
  <label for="">Cover Image</label>
  <input name="coverImage" type="file">
</div>