<h2>Title: <%= book.title %></h2>
<img height="150px" width="100px" src="<%= book.coverImageLink %>" alt="<%= book.title + " cover image" %>">
<span>Author: <%= book.author.name %></span><br>
<span>Published on: <%= new Date(book.publishedAt).toDateString() %></span>
<p>Description: <%= book.description %></p>
<span>Pages: <%= book.noOfPages%></span>
<a href="/books/<%= book.id %>/edit">Edit</a>
<%- include("../partials/deleteForm", {url: `/books/${book.id}`}) -%>
<a href="/authors/<%= book.author.id %>">View Author</a>