<% if (messages.error) { %>
  <% for( let i = 0; i <messages.error.length; i++ ) { %>
    <div>
      <p class="error-msg"><%= messages.error[i] %></p>
    </div>
  <% } %>
<% } %>

<% if (messages.success) { %>
  <div>
    <p class="success-msg"><%= messages.success %></p>
  </div>
<% } %>

<% if (messages.info) { %>
  <div>
    <p class="info-msg"><%= messages.info %></p>
  </div>
<% } %>